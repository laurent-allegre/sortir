{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <h2 class="mt-2 text-center">Filtrer sortie</h2>
    <form>

    </form>
    <div>
    <table class="table table-striped table-bordered border-dark">
    <thead>
    <tr>
        <th scope="col">Nom de la sortie</th>
        <th scope="col">Date de la sortie</th>
        <th scope="col">Clôture</th>
        <th scope="col">inscrits/places</th>
        <th scope="col">Etat</th>
        <th scope="col">Inscrit</th>
        <th scope="col">Organisaeur</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for sortie in sorties %}
    <tr>
        <td>{{ sortie.nom }}</td>
        <td>{{ sortie.dateHeureDebut | date("Y-m-d h:m") }}</td>
        <td>{{ sortie.dateLimiteInscription | date("Y-m-d")}}</td>
        <td>{{ sortie.nbInscriptionMax }}</td>
        <td>{{ sortie.etats.libelle }}</td>

        <td>{% if app.user.id == sortie.organise.id %} X {% endif %}</td>

        <td>{%  if app.user.id == sortie.organise.id %}{{ sortie.organise.nom }}
            {% else %}
            <a href="{{ path ('app_show', {"id" : sortie.organise.id})  }}" title="Détail">{{ sortie.organise.nom }}</a>
            {% endif %}
        </td>
        <td><a href="{{ path('sortie/afficher',{"id" : sortie.id}) }}" title="afficher">Afficher</a>
            <a href="{{ path('inscrire',{"id" : sortie.id}) }}" title="s'inscrire">S'inscrire</a>
            {% if app.user.id == sortie.organise.id %}
                <a href="{{ path('sortie/modif',{"id" : sortie.id}) }}" title="modifier">Modifier</a>
                <a href="{{ path('sortie/modif',{"id" : sortie.id}) }}" title="annuler">Annuler</a>
                <a href="{{ path('sortie/modif',{"id" : sortie.id}) }}" title="publier">Publier</a>

            {% endif %}
        </td>



    </tr>
    {%  endfor %}

    </tbody>
    </table>
    </div>

{% endblock %}
