{% extends 'base.html.twig' %}

{% block body %}
    <h3 class="mt-2">Bonjour!</h3>

    {{ form_start(sortieForm) }}
    <div class="container">
        <div class="row mt-5">
            <div class="col-6">{{ form_row(sortieForm.nom) }}</div>
            <div class="col-6">{{ form_row(sortieForm.camps) }}</div>
        </div>
        <div class="row mt-2">
            <div class="col-6">{{ form_row(sortieForm.dateHeureDebut) }}</div>
            <div class="col-6">{{ form_row(sortieForm.ville) }}</div>
        </div>
        <div class="row mt-2">
            <div class="col-6">{{ form_row(sortieForm.dateLimiteInscription) }}</div>
            <div class="col-6">{{ form_row(sortieForm.lieux) }}</div>
        </div>
        <div class="row mt-2">
            <div class="col-6">{{ form_row(sortieForm.nbInscriptionMax) }}</div>
            <div class="col-6"></div>
        </div>
        <div class="row mt-2">
            <div class="col-6">{{ form_row(sortieForm.infosSortie) }}</div>
            <div class="col-6">{{ form_row(sortieForm.duree) }}</div>
        </div>
        <div class="row mt-2">
            <div class="col-6">{{ form_row(sortieForm.etats) }}</div>
            <div class="col-6">{{ form_row(sortieForm.longitude) }} {{ form_row(sortieForm.latitude) }}</div>
        </div>
        <div>
            <button class="mt-5">Nouvelle sortie</button>
            <button class="mt-5">Publier sortie</button>
            <button class="mt-5">Annuler sortie</button>
        </div>

    </div>


    {{ form_end(sortieForm) }}
{% endblock %}

{% block title %}
    Cr√©ation d'une nouvelle sortie
{% endblock %}

